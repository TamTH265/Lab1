<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>tam.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>tam.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>tam.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>tam.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticlePostingController</servlet-name>
        <servlet-class>tam.controllers.ArticlePostingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataLoadingController</servlet-name>
        <servlet-class>tam.controllers.DataLoadingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleDetailLoadingController</servlet-name>
        <servlet-class>tam.controllers.ArticleDetailLoadingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>tam.controllers.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentPostingController</servlet-name>
        <servlet-class>tam.controllers.CommentPostingController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticlePostingController</servlet-name>
        <url-pattern>/ArticlePostingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataLoadingController</servlet-name>
        <url-pattern>/DataLoadingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleDetailLoadingController</servlet-name>
        <url-pattern>/ArticleDetailLoadingController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentPostingController</servlet-name>
        <url-pattern>/CommentPostingController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
